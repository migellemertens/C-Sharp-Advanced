                 RenderTransformOrigin="0.38,1.901" FontFamily="Arial" IsEnabled="False"/>
        <Label x:Name="lblOpleiding" HorizontalAlignment="Left" Margin="110,145,0,0" VerticalAlignment="Top" Content="Nederlands woord:" RenderTransformOrigin="1.077,1.048" Height="35" Width="215" FontSize="24" FontFamily="Arial"/>
        <TextBox x:Name="txtNederlandsWoord" HorizontalAlignment="Left" Margin="347,145,0,0" VerticalAlignment="Top" 
            Width="276" Height="35" FontSize="24" />
        <Button x:Name="btnZoeken" Content="Zoeken" HorizontalAlignment="Left" Margin="191,296,0,0" 
            VerticalAlignment="Top" Width="153" Height="39" FontSize="24" Click="btnZoeken_Click" FontFamily="Arial"/>
        <Button x:Name="btnControle" Content="Controle&#xA;" HorizontalAlignment="Left" Margin="470,296,0,0" 
            VerticalAlignment="Top" Width="175" Height="39" FontSize="24" Click="btnControle_Click" FontFamily="Arial"/>
    </Grid>
</Window>
